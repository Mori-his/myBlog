extends ../layout
block content

    .container
        .row
            .userList-bg
                .blockquote
                    h3 #{title}
                table.table.table-hover.table-striped.table-responsive
                    thead
                        tr
                            th 用户名
                            th 添加时间
                            th 查看
                            th 修改
                            th 删除
                    tbody
                        if users.length == 1
                            tr: td(colspan=5) 暂时没有用户可操作
                        else
                            each item,i in users
                                if user.name != item.name
                                    if i % 2 == 0
                                        tr(class="item-id-#{item._id}").danger
                                            td #{item.name}
                                            td #{moment(item.meta.createAt).format("YYYY-MM-DD")}
                                            td: a(href="#").btn.btn-link 查看
                                            td: a(href="#").btn.btn-link 修改
                                            td: a(href="#",data-id="#{item._id}").moveUser.btn.btn-danger 删除
                                    else
                                        tr(class="item-id-#{item._id}")
                                            td #{item.name}
                                            td #{moment(item.meta.createAt).format("YYYY-MM-DD")}
                                            td: a(href="#").btn.btn-link 查看
                                            td: a(href="#").btn.btn-link 修改
                                            td: a(href="#",data-id="#{item._id}").moveUser.btn.btn-danger 删除
    script(src="/js/moveUser.js")